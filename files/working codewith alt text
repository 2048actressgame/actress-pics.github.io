    <script>
    const images = [
         { "url": "https://i.ibb.co/rGWfMjF/actress-bold-club-11-118.jpg", "alt": "south Indian hot actresses" },
    { "url": "https://i.ibb.co/M6jGzk2/actress-bold-club-11-117.jpg", "alt": "south Indian hot actresses" },
    { "url": "https://i.ibb.co/gZcYC3x/actress-bold-club-11-116.jpg", "alt": "south Indian hot actresses" },
    { "url": "https://i.ibb.co/tLBLB1Y/actress-bold-club-11-115.jpg", "alt": "south Indian hot actresses" },
    { "url": "https://i.ibb.co/w0M8ym8/actress-bold-club-11-114.jpg", "alt": "south Indian hot actresses" },
    { "url": "https://i.ibb.co/VgjX36L/actress-bold-club-11-113.jpg", "alt": "south Indian hot actresses" },
    { "url": "https://i.ibb.co/KxSkw4x/actress-bold-club-11-112.jpg", "alt": "south Indian hot actresses" },
    { "url": "https://i.ibb.co/JcJHJLs/actress-bold-club-11-111.jpg", "alt": "south Indian hot actresses" },
    { "url": "https://i.ibb.co/gW37XCz/actress-bold-club-11-110.jpg", "alt": "south Indian hot actresses" },
    { "url": "https://i.ibb.co/PtbgZCs/actress-bold-club-11-109.jpg", "alt": "south Indian hot actresses" },
    { "url": "https://i.ibb.co/Pt64DR7/actress-bold-club-11-108.jpg", "alt": "south Indian hot actresses" },
    { "url": "https://i.ibb.co/PYVvJZk/actress-bold-club-11-107.jpg", "alt": "south Indian hot actresses" },
    { "url": "https://i.ibb.co/PmJFGsQ/actress-bold-club-11-106.jpg", "alt": "south Indian hot actresses" }
];

    const gallery = document.getElementById('gallery');
    const modal = document.getElementById('imageModal');
    const modalImage = document.getElementById('modalImage');
    const modalDownloadBtn = document.getElementById('modalDownloadBtn');
    const timerOverlay = document.getElementById('timerOverlay');
    const countdownElement = document.getElementById('countdown');
    let downloadTimeout;
    let currentImageUrl;

    images.forEach(image => {
        const container = document.createElement('div');
        container.className = 'image-container';

        const img = document.createElement('img');
        img.src = image.url;
        img.className = 'gallery-image';
        img.alt = image.alt; // Add the alt text here

        const downloadBtn = document.createElement('button');
        downloadBtn.className = 'download-btn';
        downloadBtn.innerHTML = `
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                <polyline points="7 10 12 15 17 10"></polyline>
                <line x1="12" y1="15" x2="12" y2="3"></line>
            </svg>
            Download
        `;

        container.appendChild(img);
        container.appendChild(downloadBtn);
        gallery.appendChild(container);

        const showModal = (e) => {
            modal.style.display = 'flex';
            modalImage.src = image.url;
            modalImage.alt = image.alt; // Update modal image alt text
            currentImageUrl = image.url;
        };

        img.addEventListener('click', showModal);
        downloadBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            downloadImage(image.url);
        });
    });
    
        function startDownloadTimer() {
            let countdown = 7;
            timerOverlay.style.display = 'flex';
            countdownElement.textContent = countdown;

            const timer = setInterval(() => {
                countdown--;
                countdownElement.textContent = countdown;

                if (countdown <= 0) {
                    clearInterval(timer);
                    downloadImage(currentImageUrl);
                    timerOverlay.style.display = 'none';
                    modal.style.display = 'none';
                }
            }, 1000);

            downloadTimeout = timer;
        }


        function downloadImage(url) {
            fetch(url)
                .then(response => response.blob())
                .then(blob => {
                    const blobUrl = window.URL.createObjectURL(blob);
                    const link = document.createElement('a');
                    link.href = blobUrl;
                    link.download = url.split('/').pop();
                    document.body.appendChild(link);
                    link.click();
                    document.body.removeChild(link);
                    window.URL.revokeObjectURL(blobUrl);
                })
                .catch(error => console.error('Download failed:', error));
        }

        modalImage.addEventListener('click', () => {
            startDownloadTimer();
        });

        modalDownloadBtn.addEventListener('click', () => {
            downloadImage(currentImageUrl);
        });

        document.querySelector('.close-btn').addEventListener('click', () => {
            modal.style.display = 'none';
            timerOverlay.style.display = 'none';
            if (downloadTimeout) {
                clearTimeout(downloadTimeout);
            }
        });

        modal.addEventListener('click', (e) => {
            if (e.target === modal) {
                modal.style.display = 'none';
                timerOverlay.style.display = 'none';
                if (downloadTimeout) {
                    clearTimeout(downloadTimeout);
                }
            }
        });
    </script>
